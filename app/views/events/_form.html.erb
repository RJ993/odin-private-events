<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @event.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @event.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %><br>
    <% @event.errors.full_messages_for(:date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :availability, value: "Who can see this event?" %><br>
    <%= form.radio_button :availability, :open_to_public %>
    <%= form.label :availability, "Public" %> <br>
    <%= form.radio_button :availability, :only_private %>
    <%= form.label :availability, "Private" %> <br>
    <% @event.errors.full_messages_for(:availability).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>